{
  "name": "xuder",
  "version": "0.0.1",
  "description": "Build on the simplicity of Redux. A predicable state container.",
  "main": "index.js",
  "engines": {
    "node": ">= 6"
  },
  "scripts": {
    "lint": "standard --fix",
    "test": "ava --tap",
    "watch": "ava --tap -watch",
    "coverage": "nyc npm run test",
    "build": "rollup  --sourcemap --input ./src/index.js --format umd --name 'xuder' --output ./build/xuder.js",
    "build-example": "rollup  --sourcemap --input ./example/src/index.js --format iife --output  ./example/build/dist.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chenzhihao/Xuder.git"
  },
  "keywords": [
    "redux",
    "state"
  ],
  "author": "cabtravis@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chenzhihao/Xuder/issues"
  },
  "homepage": "https://github.com/chenzhihao/Xuder#readme",
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.5.2",
    "babel-register": "^6.24.1",
    "babel-runtime": "^6.23.0",
    "nyc": "^11.0.2",
    "rollup": "^0.42.0",
    "rollup-watch": "^4.0.0",
    "standard": "^10.0.2"
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "source": [
      "src/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "tap": true,
    "powerAssert": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "dependencies": {}
}
